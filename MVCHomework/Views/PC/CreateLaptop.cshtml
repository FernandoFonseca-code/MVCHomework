
@model BuiltPC
@{
	ViewData["Title"] = "Create a Laptop";
}

<h2>Build a Laptop</h2>

<form method="post" class="bg-light p-3">
	<div class="form-group">
		<label class="control-label" asp-for="Title"></label>
		<input class="form-control" asp-for="Title"/>
		<span class="text-danger" asp-validation-for="Title"></span>
	</div>
	<br />
	
	<div class="form-group">
		<label class="control-label" asp-for="Type"></label>
		<select class="form-control"  asp-for="Type">
			<option value="Gaming">Gaming</option>
			<option value="TravelWork">Travel(Work)</option>
			<option value="TravelLeisure">Travel(Leisure)</option>
		</select>
		<span class="text-danger" asp-validation-for="Type"></span>
	</div>
	<br />

	<div class="form-group">
		<label class ="control-label" asp-for="Budget"></label>
		<input class="form-control" asp-for="Budget" />
		<span class ="text-danger" asp-validation-for="Budget"></span>
	</div>
	<br />

	<div class="form-group">
		<label class="control-label" asp-for="CPU"></label>
		<select class="form-control" asp-for="CPU">
		<option value="AMD">AMD</option>
		<option value="Intel">Intel</option>
	</select>
		<span class="text-danger" asp-validation-for="CPU"></span>
	</div>
	<br />

	<div class="form-group">
	<label class="control-label" asp-for="GPU"></label>
	<input class="form-control" asp-for="GPU" />
	<span class="text-danger" asp-validation-for="GPU"></span>
	</div>
	<br />

	<input class="btn btn-primary" type="submit" value="Build"/>
</form>

	@section Scripts{
		<partial name="_ValidationScriptsPartial"/>
	}